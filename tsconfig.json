{
	"compilerOptions": {
		"lib": ["es2019", "es2020", "es2021", "es2022"],
		"module": "commonjs",
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": true,
		"target": "es2019",
		"outDir": "./dist",
		"types": ["node"],
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"incremental": true,
		"declaration": true
	},
	"include": ["nodes/**/*", "credentials/**/*"],
	"exclude": ["node_modules/**/*", "dist/**/*"]
}